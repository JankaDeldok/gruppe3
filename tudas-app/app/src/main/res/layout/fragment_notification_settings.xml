<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/secondary"
    android:clickable="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOTIFICATIONS"
        android:layout_marginBottom="20dp"
        android:textSize="15pt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/feed_card_box_green"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

                <Switch
                    android:id="@+id/switchChallengeReceived"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notification when new challenge received"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <Switch
                android:id="@+id/switchFriendChallengeCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification when friend completes challenge"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <Switch
                android:id="@+id/switchFriendRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification when new friends request"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <Switch
                android:id="@+id/switchChallengeEnds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification 6 hours before challenge ends"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:layout_gravity="start"
            android:textSize="10pt"
            android:layout_weight="1"
            android:layout_marginRight="100dp"
            app:cornerRadius="@android:dimen/app_icon_size"
            />


        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            app:cornerRadius="@android:dimen/app_icon_size"
            android:backgroundTint="@color/green"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_weight="1"
            />


    </LinearLayout>

</LinearLayout>