<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_challenge_received"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    android:clickable="false"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="@color/green"
    card_view:cardCornerRadius="@dimen/card_radius"
    card_view:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/challenge_title"
                        android:layout_width="181dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="28dp"
                        android:textColor="@color/secondary"
                        android:text="Title" />

                    <TextView
                        android:id="@+id/challenge_author"
                        android:layout_width="181dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/secondary"
                        android:text="Author" />
                </LinearLayout>

                <TextView
                    android:id="@+id/challenge_time_left"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="end|center_vertical"
                    android:textColor="@color/secondary"
                    android:text="10 days left" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/challenge_description"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="top"
                    android:textColor="@color/secondary"
                    android:text="Description" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/challenge_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OPEN"
                    app:cornerRadius="@dimen/button_radius" />

                <TextView
                    android:id="@+id/challenge_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="60dp"
                    android:textColor="@color/secondary"
                    android:text="Reward" />

                <TextView
                    android:id="@+id/challenge_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/secondary"
                    android:text="Points" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
